rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Authentication is required for all operations
    match /{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if false; // Default deny
    }

    // Helper functions
    function getUserData() {
      let userDoc = get(/databases/$(database)/documents/users/$(request.auth.uid));
      return userDoc != null && userDoc.data != null ? userDoc.data : { role: 'user', approved: false };
    }

    function isAdmin() {
      return request.auth != null &&
        (getUserData().isAdmin == true || getUserData().role == 'admin');
    }

    function isSystemOwner() {
      return request.auth != null && getUserData().isOwner == true;
    }

    function isResourceOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    function getOrderUserId(orderId) {
      let orderDoc = get(/databases/$(database)/documents/orders/$(orderId));
      return orderDoc != null && orderDoc.data != null ? orderDoc.data.userId : null;
    }

    function getOrderDistributorId(orderId) {
      let orderDoc = get(/databases/$(database)/documents/orders/$(orderId));
      return orderDoc != null && orderDoc.data != null ? orderDoc.data.distributorId : null;
    }

    // User profile images
    match /profiles/{userId}/{fileName} {
      // Allow users to upload their own profile images
      allow read: if true; // Public read for profiles
      allow write: if isResourceOwner(userId) || isAdmin() || isSystemOwner();
    }

    // Product images
    match /products/{productId}/{fileName} {
      // Everyone can read product images
      allow read: if true;
      // Only admins and owners can upload/modify product images
      allow write: if isAdmin() || isSystemOwner();
    }

    // Order attachments
    match /orders/{orderId}/{fileName} {
      // Order owner, assigned distributor, admin, or owner can read
      allow read: if isAdmin() || isSystemOwner() ||
                   (getOrderUserId(orderId) != null && isResourceOwner(getOrderUserId(orderId))) ||
                   (getOrderDistributorId(orderId) != null && request.auth.uid == getOrderDistributorId(orderId));

      // Only distributor assigned to order, admin, or owner can upload/modify
      allow write: if isAdmin() || isSystemOwner() ||
                    (getOrderDistributorId(orderId) != null && request.auth.uid == getOrderDistributorId(orderId));
    }

    // Catalog images - for all product images
    match /catalog/{fileName} {
      allow read: if true;
      allow write: if isAdmin() || isSystemOwner();
    }
  }
}